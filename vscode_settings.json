  // Token Color Customizations
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["punctuation.section.function.begin.python"],
        "settings": {
          "foreground": "#50fa7b"
        }
      },
      {
        "scope": [
          "constant.other.ellipsis.python",
          "variable.other.jinja",
          "variable.other.readwrite.js",

        ],
        "settings": {
          "foreground": "#73f3fc"
        }
      },
      {
        "scope": [
          "punctuation.separator.colon.python",
          "storage.type.class.python",
          "punctuation.section.class.begin.python",
          "punctuation.other.jinja"
        ],
        "settings": {
          "foreground": "#ff0a5c"
        }
      },
      {
        "scope": ["entity.name.type.class.python", "entity.name.type.class.js", "entity.name.type.class.ts"],
        "settings": {
          "foreground": "#50fa7b",
          "fontStyle": "underline"
        }
      },
      {
        "scope": [
          "variable.language.special.cls.python",
          "variable.parameter.function.language.special.cls.python"
        ],
        "settings": {
          "foreground": "#50fa7b"
        }
      },
      {
        "scope": [
          "variable.language.special.self.python",
          "variable.parameter.function.language.special.self.python",
          "variable.language.this.js"
        ],
        "settings": {
          "foreground": "#eb99e5"
        }
      },
      {
        "scope": ["entity.other.jinja.delimiter.variable", "entity.other.jinja.delimiter.tag"],
        "settings": {
          "foreground": "#ed9d34"
        }
      },
      {
        "scope": [
          "keyword.control.jinja",
          "meta.template.expression.js",
          "punctuation.definition.template-expression.begin.js",
          "punctuation.definition.template-expression.end.js",
        ],
        "settings": {
          "foreground": "#ff3d3d"
        }
      },
      {
        "scope": ["punctuation.definition.decorator.python", "meta.object-literal.key.js"],
        "settings": {
          "foreground": "#f57bc2"
        }
      },
      {
        "scope": ["entity.name.function.decorator.python"],
        "settings": {
          "foreground": "#cc41f3"
        }
      }
    ]
  },

